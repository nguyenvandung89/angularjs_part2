<div ng-controller="ArticleCtrl" ng-init="getArticles()" class="container-fluid">
  <h3 class="text-info" style="text-align: center">Create or update article</h3>
  <div class="controls">
	  <form ng-submit="save()">
	    <label>Title</label><br />
	    <input type="text" placeholder="Enter article title" ng-model="article.title" class="input-xlarge search-query" />
	    <button>Submit</button>
	  </form>
	</div><br />
	<h4>List articles</h4>
	<div class="form-search">
  	Search: <input type="text" placeholder="Enter article title" ng-model="query" class="input-medium search-query" />
  </div>
  <div id="screencast-list-container">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Id</th>
          <th>Title</th>
          <th>Reviews</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody ng-repeat="article in articles | filter:query | orderBy:'title'">
        <tr>
          <td>{{article.id}}</td>
          <td><editablespan input-class="form-control" model="article.title" on-ready="editArticle(article)"></editablespan></td>
          <td><a href="#" class="btn btn-link" data-toggle="modal" data-target="#basicModal">Reviews</a></td>
          <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
										X
									</button>
									<h4 class="modal-title" id="myModalLabel">Review article</h4>
								</div>
								<div class="modal-body">
									<h3>{{article.title}}</h3>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-default" data-dismiss="modal">
										Close
									</button>
								</div>
							</div>
						</div>
					</div>
          <td><button ng-click="edit(article)" class="btn btn-primary">Edit</button></td>
          <td><button ng-click="delete(article)" class="btn btn-danger">Delete</button></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>